<Window x:Name="Window_Game" x:Class="NavalBattle.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game" Height="344" Width="713">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="Canvas_Plane" HorizontalAlignment="Left" Height="293" Margin="10,10,0,0" VerticalAlignment="Top" Width="293" RenderTransformOrigin="0.5,0.5" Background="#FFCEF1FB">
            <Canvas.Effect>
                <BlurEffect Radius="2" KernelType="Box" RenderingBias="Quality"/>
            </Canvas.Effect>
        </Canvas>
        <Canvas x:Name="Canvas_Shot" Height="293" Margin="400,10,10,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Background="#FFCEF1FB">
            <Canvas.Effect>
                <BlurEffect Radius="2" KernelType="Box" RenderingBias="Quality"/>
            </Canvas.Effect>
        </Canvas>

    </Grid>
</Window>
